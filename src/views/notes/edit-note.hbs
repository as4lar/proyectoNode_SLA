<div class="col md-3 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
            <div class="card-body">
                <form action="/notes/edit-note/{{@root.note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <input type="text" class="form-control" name="title" placeholder="Title" value="{{@root.note.title}}">
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control">{{@root.note.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Save</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>